  <div class="container mx-auto flex flex-col  h-screen items-center">
    
    <!-- title of the page -->

    <img src="https://i0.wp.com/blog.interviewbit.com/wp-content/uploads/2017/11/cropped-logo-transparent4.png?ssl=1" class="h-1/4" alt="">
    <h1 class="text-5xl font-bold text-white m-5">
      Interview Scheduler
    </h1>
    <p class="mb-3 text-white">by Abhishek Sheoran</p>


    <div class="container menu-bar flex items-center justify-center bg-white p-4 w-auto rounded-full">
      <ul class="flex">
        <li class="mr-3 ml-3 ">
          <a class="inline-block inactive-link" href="/">Upcoming Interviews</a>
        </li>
        <li class="mr-3">
          <a class="inline-block selected-link" href="#">All Interviews</a>
        </li>
        <li class="mr-3">
          <a class="inline-block inactive-link" href="/create">Add Interview</a>
        </li>
      </ul>
    </div>



    <!-- table view of the interviews -->
    <div class="flex flex-col mx-auto mt-5">
      <div class="-my-2 overflow-x-auto sm:-mx-6 lg:-mx-8">
        <div class="py-2 align-middle inline-block min-w-full sm:px-6 lg:px-8">
          <div class="shadow overflow-hidden border-b border-gray-200 sm:rounded-lg">
            <table class="min-w-full divide-y divide-gray-200">
              <thead class="bg-gray-50">
                <tr>
                  <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                    Description
                  </th>
                  <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                    Participants
                  </th>
                  <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                    Status
                  </th>
                  <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                    Start Time
                  </th>
                  <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                    End Time
                  </th>
                  <th scope="col" class="relative px-6 py-3">
                    <span class="sr-only">Edit</span>
                  </th>
                </tr>
              </thead>
              <tbody class="bg-white divide-y divide-gray-200"> 

                <% interviews.forEach(interview => { %>
                 
                <tr>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <div class="flex items-center">
                      <div >
                        <div class="text-sm font-bold text-gray-900">
                          <%= interview.title %>
                        </div>
                        <div class="text-sm text-gray-500">
                          <%= interview.description %>
                        </div>
                      </div>
                    </div>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">

                    <!-- person 1 -->
                    <% interview.participants.forEach(participant => { %>
                      <div class="flex items-center my-2">
                        <div class="flex-shrink-0 h-10 w-10">
                          <img class="h-10 w-10 rounded-full" src="https://i.pravatar.cc/300" alt="">
                        </div>
                        <div class="ml-4">
                          <div class="text-sm font-bold text-black">
                            <%= participant.name %>
                          </div>
                          <div class="text-sm text-gray-500">
                            <%= participant.email %>
                          </div>
                        </div>
                      </div>
                    <% }) %>


                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full <% if ( interview.status == 'Upcoming') { %>
                     bg-blue-500
                    <% } else { %> bg-green-500 <%  } %> 
                       text-white">
                      <%= interview.status %>
                    </span>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                    <%= interview.startTime %> IST <p> <%=interview.date %> </p>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                    <%= interview.endTime %> IST <p> <%=interview.date %> </p>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                    
                  </td>
                </tr>
                <% }) %>

              </tbody> 
            </table>
          </div>
        </div>
      </div>
    </div>

  </div>
